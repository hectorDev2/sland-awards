---
import NumbersItem from "./NumbersItem.astro";
import CountUp from "./CountUp";
---

<section class="max-w-6xl mx-auto py-20 px-20" data-astro-cid-ayynbghb="">
  <h2
    class="text-4xl lg:text-6xl font-tomaso text-center text-balance mb-10 lg:mb-20"
    data-astro-cid-ayynbghb=""
  >
    Los ESLAND en números
  </h2>
  <div
    class="grid grid-cols-1 lg:grid-cols-3 gap-y-10"
    data-astro-cid-ayynbghb=""
  >
    <NumbersItem title="Ediciones anteriores">
      <CountUp client:visible initial={0} final={69.9} decimals={1} />M
    </NumbersItem>
    <NumbersItem title={`Noticias de Prensa`}>
      <CountUp client:visible initial={0} final={227} />
    </NumbersItem>
    <NumbersItem title={`En Medio del Ganador`}>
      <CountUp client:visible initial={0} final={3.2} decimals={1} />M€
    </NumbersItem>
  </div>
</section>
